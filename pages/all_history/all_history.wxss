.container{
  background-color:#2B293D;
  height: 100%;
  position:absolute;
  top:0px;
  left:0px;
  right:0px;
  bottom:0px;
  z-index: -1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top:20px;
  width: 100%;
  height: 100px;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 88px;
  height: 18px;
  font-family: Avenir Next;
  font-size: 12px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #ffffff;
  margin-top: 8px;
}
.diaryContainer{
  position: absolute;
  top: 105px;
  left: 0px;
  right: 0px;
  bottom: 0px;
}

.diary{
  width:100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  top:10px;
  bottom: 0px;
}
.scrollviewy{
  position: absolute;
  top:20px;
  bottom: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.id{
  width: 40px;
  height: 40px;
  background-color: #3d3a55;
  box-shadow: inset 0 3px 3px 0 rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  margin-left: 20px;
}
.id text{
  width: 40px;
  height: 40px;
  display: block;
  font-family: Avenir Next;
  font-size: 18px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 40px;
  letter-spacing: normal;
  text-align: center;
  color: #a8a1e5;
}
.outscroll{
  height: 140px;
  margin-bottom: 20px;
  /* position: absolute; */
  display: flex;
  flex-direction: row;
  align-items: center;
}
.scrollviewx{
  width: auto;
  white-space: nowrap; 
  position: absolute;
  left: 100px;
  right: 0px;
}
.innerscroll{
  width: 120px;
  height: 140px;
  border-radius: 8px;
  background-color: #fafafa;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.5);
  display: inline-block; 
  margin-right: 20px;
}
.diaryblock{
  width: 100px;
  height: 90px;
}
.diaryblock text{
  font-family: Avenir Next;
  font-size: 16px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #000000;
  word-break: break-all;
  overflow: hidden;
  white-space: pre-wrap;
}