.container {
  background-color: #2b293d;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  z-index: -1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 0;
  width: 100%;
  height: 100px;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 88px;
  height: 18px;
  font-family: Avenir Next;
  font-size: 12px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #fff;
  margin-top: 8px;
}

.diaryContainer {
  position: absolute;
  top: 105px;
  left: 0px;
  right: 0px;
  bottom: 0px;
}

.diary {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  bottom: 0px;
}

.scrollviewy {
  position: absolute;
  top: 20px;
  bottom: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dateDottedline{
  width: auto;
  height: 100%;
  margin-top: 100px;
}

.date {
  width: 40px;
  height: 40px;
  background-color: #3d3a55;
  box-shadow: inset 0 3px 3px 0 rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  margin-left: 30px;
}

.date text {
  width: 40px;
  height: 40px;
  display: block;
  font-family: Avenir Next;
  font-size: 18px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 46px;
  letter-spacing: normal;
  text-align: center;
  color: #a8a1e5;
}

.Dottedlineimg{
  width: 54px;
  height: 2px;
  object-fit: contain;
  transform: rotate(90deg);
  margin-left: 22px; 
  margin-top: 60px; 
}
.outscroll {
  height: 140px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;  
}

.scrollviewx {
  width: auto;
  height: 140px;
  white-space: nowrap;
  position: absolute;
  left: 100px;
  right: 0px; 
}

.innerscroll {
  width: 120px;
  height: 140px;
  border-radius: 8px;
  background-color: #fafafa;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.5);
  margin-right: 20px;
  display: inline-flex;
}

.diaryblock {
  width: 100px;
  height: 90px;
  margin-left: 10px;
  margin-top: 10px; 
  font-family: Avenir Next;
  font-size: 16px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #000;
  word-break: break-all;
  overflow: hidden; 
  white-space: normal; 
}
.emotion {
  width: 120px;
  height: 36px;
  position: absolute;
  /* bottom: 20px; 安卓改为0px */
  background-image: radial-gradient(circle at 50% 100%, #61ecc9, #32d498);
  border-radius: 0px 0px 8px 8px;
}