.container{
  background-color:#2B293D;
  height: 100%;
  position:absolute;
  top:0px;
  left:0px;
  right:0px;
  bottom:0px;
  z-index: -1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top:20px;
  width: 100%;
  height: 100px;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 88px;
  height: 18px;
  font-family: Avenir Next;
  font-size: 12px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #ffffff;
  margin-top: 8px;
}
.dairyContainer{
  position: absolute;
  top: 105px;
  left: 0px;
  right: 0px;
  bottom: 0px;
}

.dairy{
  display: flex;
  flex-direction: column;
  position: absolute;
  left:20px;
  right: 20px;
  top:10px;
  bottom: 0px;
}
.scrollviewy{
  height: 100%;
}
.outscroll{
  width: 100%;
  height: 140px;
  margin-bottom: 20px;
}
.scrollviewx{
  display: inline-block;
  white-space: nowrap; 
}
.innerscroll{
  width: 120px;
  height: 140px;
  border-radius: 8px;
  background-color: #fafafa;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.5);
  display: inline-block;
  margin-right: 20px;
}
.dairytitle{
  width: 100px;
  height: 90px;
  font-family: AvenirNext;
  font-size: 16px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #000000;
  word-break: break-all;
  overflow: hidden;
  white-space: pre-wrap;
}