/************myMessage********************/

.myMessage {
  padding: 15px;
}

.myview {
  height: 100%;
}

.myview image {
  float: right;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.myview .m {
  position: relative;
  float: right;
  margin: 10px;
  max-width: 50%;
  background-image: radial-gradient(circle at 50% 100%, #58d6b6, #32d498);
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.5);
  border-radius: 10px; 
}

.myview .m .mes {
  position: relative;
  padding: 10px;
  word-wrap: break-word;
  max-width: 90%;
  float: right;
  font-family: Avenir Next;
  font-size: 16px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #ffffff;
}


/************youMessage********************/

.youMessage {
  padding: 15px;
}

.youview {
  height: 100%;
}

.youview image {
  float: left;
}

.youview .m {
  position: relative;
  float: left;
  margin: 10px;
  max-width: 50%;
  border-radius: 10px;
  background-image: radial-gradient(circle at 50% 98%, #3ca3f3, #328dd4);
