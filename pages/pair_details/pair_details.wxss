/*日记卡  */

.diaryCard {
  height: 210px;
  position: absolute;
  bottom: 20px;
  left: 0px;
  right: 0px;
  display: flex;
  align-items: center;
}

.scrollview {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.diaryTitleId {
  display: inline-block;
  margin-right: 20px;
  margin-top: 5px;
}

.diaryTitleId:first-child {
  margin-left: 20px;
}

.expandupId {
  width: 120px;
  height: 100%;
}
.expandupimg {
  width: 24px;
  height: 24px;
  object-fit: contain;
  position: absolute;
  top: 15px;
  left: 28px; 
}

.date {
  width: 40px;
  height: 40px;
  background-color: #3d3a55;
  box-shadow: inset 0 3px 3px 0 rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  margin-left: 40px;
  margin-right: 40px; 
  display: inline-flex;
}

.date text {
  width: 40px;
  height: 40px;
  font-family: Avenir Next;
  font-size: 18px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 40px;
  letter-spacing: normal;
  text-align: center;
  color: #a8a1e5;
  display: block;
}

.Dottedlineimg{
  width: 54px;
  height: 2px;
  object-fit: contain;
  margin-left: -20px; 
}

.diaryTitle {
  width: 120px;
  height: 140px;
  border-radius: 8px;
  background-color: #fafafa;
  position: absolute;
  bottom: 20px;
  top:60px;
}

.diaryTitle text {
  width: 100px;
  height: 90px;
  font-family: Avenir Next;
  font-size: 16px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #000;
  position: absolute;
  top: 10px;
  left: 10px;
  right: 10px;
  bottom: 50px;
  word-break: break-all;
  overflow: hidden;
  white-space: pre-wrap;
}

.emotion {
  width: 120px;
  height: 36px;
  position: absolute;
  /* bottom: system px; 安卓改为0px；  */
  background-image: radial-gradient(circle at 50% 100%, #61ecc9, #32d498);
  border-radius: 0px 0px 8px 8px;
}
