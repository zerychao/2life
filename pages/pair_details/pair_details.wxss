.container {
  background-color: #2b293d;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  z-index: -1;
}

.bottom-line {
  border-top: 1px solid gainsboro;
  background-color: #2b293d;
  width: 100%;
  height: 50px;
  position: absolute;
  bottom: 0px;
}

.bottom-line input {
  float: left;
  background-color: #3d3a55;
  width: 75%;
  height: 85%;
  font-size: 24px;
  margin: 1px 2% 1px;
  margin-top: 2.5px;
  box-shadow: 2px 2px 3px #000;
  border-radius: 20px;
}

.bottom-line button {
  float: left;
  width: 20%;
  height: 85%;
  margin-top: 2.5px;
  background-color: #3d3a55;
  box-shadow: 0px 0px 3px #000;
}

.messageSV {
  background-color: #2b293d;
  z-index: 1;
  width: 100%;
  position: absolute;
  top: 0px;
  bottom: 51px;
}

/************myMessage********************/

.myMessage {
  padding: 15px;
}

.myview {
  height: 100%;
}

.myview image {
  float: right;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.myview .m {
  position: relative;
  float: right;
  margin: 10px;
  max-width: 60%;
}

.myview .m .mes {
  position: relative;
  padding: 10px;
  background: #4ec046;
  border-radius: 5px; /* 圆角 */
  word-wrap: break-word;
  max-width: 90%;
  float: right;
}

.myview .m .arrow {
  position: absolute;
  top: 5px;
  right: -16px; /* 圆角的位置需要细心调试哦 */
  width: 0;
  height: 0;
  font-size: 16px;
  border: solid 8px;
  border-color: #2b293d #2b293d #2b293d #4ec046;
  z-index: 0;
}

/************youMessage********************/

.youMessage {
  padding: 15px;
}

.youview {
  height: 100%;
}

.youview image {
  float: left;
}

.youview .m {
  position: relative;
  float: left;
  margin: 10px;
  max-width: 60%;
}

.youview .m .mes {
  position: relative;
  padding: 10px;
  background: white;
  border-radius: 5px; /* 圆角 */
  word-wrap: break-word;
  max-width: 90%;
  float: left;
}

.youview .m .arrow {
  position: absolute;
  top: 5px;
  left: -16px; /* 圆角的位置需要细心调试哦 */
  width: 0;
  height: 0;
  font-size: 16px;
  border: solid 8px;
  border-color: #2b293d white #2b293d #2b293d;
  z-index: 0;
}

.yk {
  clear: both;
}
