<!--page.wxml-->
<view class="box">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
       <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover" bindtap="contact"></image> 
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <!-- 文本框 -->
    <view class="dairybox">
        <textarea class="dairytitle" focus placeholder="What is going on today?" placeholder-style="color:#5b577d"/>
        <textarea class="dairytext" 
        maxlength="-1"  cursor-spacing="0" />
        <view class="save">
          <view class="savebotton" style="width: 65px;height: 100%;border-radius: 12px;background-color: rgba(0, 0, 0, 0.25);box-shadow: inset 0 0.5px 1px 0 rgba(0, 0, 0, 0.5);position:absolute;left:20px;">
            <text bindtap="saveDairy" style="font-family: Avenir Next; font-size: 15px; font-weight: bold;font-style: normal;font-stretch: normal;line-height: normal;letter-spacing: normal;text-align: right;color: #ffffff;position:absolute;left:17px;top:4px;">{{save}}</text>
          </view>
        </view>
    </view>

 <!-- 滚动日志卡 -->
     <view class=" dairyCard"> 
      <scroll-view class="scrollview" scroll-x="true">
        <block class="dairybox" wx:for="{{dairyList}}" wx:for-item="item" wx:for-index="idx">
          <view class="dairyTitleId">
             <view class="id"><text>{{item.id}}</text></view>   
             <view class="dairyTitle"><text>{{item.title}}</text></view>
             <view class="emotion">
              <view wx:if="{{item.emotion>1}}">蓝色</view>
              <view wx:else>黑色</view>
             </view>
          </view>
        </block>
      </scroll-view>
     </view> 

</view>