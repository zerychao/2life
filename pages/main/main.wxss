.box{
  background-color: #2B293D;
  height: 100%;
  position:absolute;
  top:0px;
  left:0px;
  right:0px;
  bottom:0px;
  z-index: -1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 100px;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 88px;
  height: 18px;
  font-family: Avenir Next;
  font-size: 12px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #ffffff;
  margin-top: 8px;
}
.dairybox{ 
  border-radius: 8px;
  background-image: radial-gradient(circle at 50% 100%, #504c6f, #3d3a54);
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.5);
  position:absolute;
  top:120px;
  bottom: 230px;
  left: 20px;
  right:20px;
}

.dairytitle{
  height:80px;
  font-family: Avenir Next;
  font-size: 24px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: 40px;
  letter-spacing: normal;
  text-align: left;
   color: #fff; 
  /* border-bottom: solid #aaa; */
  position: absolute;
  top :20px;
  left: 20px;
  right: 20px;
}
.dairytext{
  font-family: Avenir Next;
  font-size: 18px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: 36px;
  letter-spacing: normal;
  text-align: left;
  color: #ffffff;
  position: absolute;
  left: 20px;
  right: 20px;
  bottom: 10px; 
  top: 110px; 
  height: auto;
}

.dairyCard{
  height: 200px;
  position: absolute;
  bottom: 20px;
  left: 20px;
  right:0px;
  display: flex;
  align-items: center;
}
.scrollview{
  width: 100%;
  height: 100%;
  white-space: nowrap; 
}

.dairyTitleId{
  display: inline-block;
  margin-right: 20px;
  margin-top: 5px;
}
.id{
  width: 40px;
  height: 40px;
  background-color: #3d3a55;
  box-shadow: inset 0 3px 3px 0 rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  margin-left: 40px;
  margin-right: 40px;
}
.id text{
  width: 38px;
  height: 25px;
  font-family: Avenir Next;
  font-size: 18px;
  font-weight: 600;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #a8a1e5;
  position: absolute;
  top: 12px;
}
.dairyTitle{
  width: 120px;
  height: 140px;
  border-radius: 8px;
  background-color: #fafafa;
  position: absolute;
  bottom: 20px;
}

.dairyTitle text{
  width: 100px;
  height: 90px;
  font-family: Avenir Next;
  font-size: 16px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #000000;
  position: absolute;
  top:10px;
  left:10px;
  right:10px;
  bottom: 50px;
  word-break: break-all;
  overflow: hidden;
  white-space: pre-wrap;
}